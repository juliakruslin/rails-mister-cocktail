<h1> <%= @cocktail.name %></h1>
<% @doses.each do |dose|%>
 <p> <%= dose.ingredient.name%> : <%= dose.description %> <%= link_to "Delete dose", dose_path(dose), method::delete %> </p>
<%  end %>

<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>


<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Go back to all cocktails", cocktails_path %>
